---
const {icon, title, paragraph} = Astro.props
---

<div class="story__card">
    <span><i class={icon}></i></span>
    <h3>{title}</h3>
    <p>{paragraph}</p>
</div>

<style>
    .story__card{
        padding: 1rem;
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        box-shadow: 5px 5px 5px rgba(255, 251, 251, 0.103);
        transition: 0.3s;
    }
    .story__card:hover{
        box-shadow: 5px 5px 10px var(--primary-color); 
    }
    .story__card:hover span{
        color: var(--primary-color);
    }
    .story__card h3{
        color: var(--white);
        font-size: 1.2rem;
    }
    .story__card span{
        color: var(--white);
        font-size: 2rem;
    }
    .story__card p{
        color: var(--text-light);
    }
</style>