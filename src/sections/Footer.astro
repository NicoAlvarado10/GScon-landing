<style>
    .footer{
        padding-top: 5rem;
        background-color: #eaf2ea;
    }
    .nav__logo{
        color: var(--text-dark);
        transition: 0.3s;
        font-size: 2rem;
        font-weight: 600;
    }
    .footer__container{
        max-width: var(--max-width);
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
        gap: 3rem;
        padding-bottom: 3rem;
    }
    .footer__container h3{
        font-size: 1.5rem;
        padding-bottom: 1rem;
    }
    .footer__card{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .footer__card ul{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
 
    .footer__link{
        color: var(--text-dark);
        font-weight: 600;
        display: flex;
        gap: 1rem;
        font-size: 1.1rem;   
    }
    
    .footer__link:hover{
        color: var(--primary-color-dark);   
    }
    
    .footer p{
        text-align: center;
        padding: 1rem 0 ;
        border-top: 1px solid var(--text-dark);
        color: var(--text-dark);
    }
    .footer__newsletter h3{
        text-align: center;
        padding-bottom: 1rem;
    }
    .footer__newsletter form{
        display: flex;
        align-items: center;
        padding: 0.8rem;
        border-radius: 12px;
    }
    .footer__newsletter input{
        padding: 0.8rem 2rem;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
        background-color: var(--text-dark);
    }
    .footer__newsletter button{
        padding: 0.8rem 2rem;
        background-color: var(--primary-color-dark);
        color: var(--white);
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
        cursor: pointer;
        border: 1px solid var(--white);
    }
    .footer__newsletter button:hover{
        background-color: var(--primary-color);
    }

    @media (width < 768px ){
        .footer{
        }
        .footer__container{
            padding-left: 1rem;
            padding-right: 1rem;
            display: grid;
            grid-template-columns: repeat(2,1fr);
            
        }
    }

    @media (width < 540px){
        .footer__container{
            display: flex;
            flex-direction: column;
        }
        .footer__newsletter h3{
            text-align: left;
        }
        .footer__newsletter input{
            width: 100%;
        }
    }
</style>